<?xml version="1.0"?>
<robot name="quadrotor">

  <!-- Main quadrotor link -->
    <link name="base">
      <inertial>
        <mass value="0.6" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.01152" ixy="0.0" ixz="0.0" iyy="0.01152" iyz="0.0" izz="0.0218" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://hector_quadrotor_urdf/meshes/quadrotor/quadrotor_base.dae"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://hector_quadrotor_urdf/meshes/quadrotor/quadrotor_base.stl"/>
        </geometry>
      </collision>
    </link>

  <!-- North motor -->
  <link name="motor-n">
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
      </inertial>

      <visual>
        <geometry>
          <cylinder radius="0.025" length="0.05"/>
        </geometry>
      </visual>

      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
      </collision>
  </link>

  <!-- South motor -->
  <link name="motor-s">
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
      </inertial>

      <visual>
        <geometry>
          <cylinder radius="0.025" length="0.05"/>
        </geometry>
      </visual>

      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
      </collision>
  </link>

  <!-- East motor -->
  <link name="motor-e">
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
      </inertial>

      <visual>
        <geometry>
          <cylinder radius="0.025" length="0.05"/>
        </geometry>
      </visual>

      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
      </collision>
  </link>

  <!-- West motor -->
  <link name="motor-w">
      <inertial>
        <mass value="0.05" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
      </inertial>

      <visual>
        <geometry>
          <cylinder radius="0.025" length="0.05"/>
        </geometry>
      </visual>

      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
      </collision>
  </link>


  <joint name="motor-n-glue" type="revolute">
       <parent link="base"/>
       <child link="motor-n"/>
       <origin xyz="0.2 0 0" rpy="0 0 0" />
       <limit upper="0" lower="0" velocity="10" effort="1"/>
       <axis xyz="0 0 1" />  
  </joint>
  <joint name="motor-s-glue" type="revolute">
       <parent link="base"/>
       <child link="motor-s"/>
       <origin xyz="-0.2 0 0" rpy="0 0 0" />
       <limit upper="0" lower="0" velocity="10" effort="1"/>
       <axis xyz="0 0 1" />
  </joint>
  <joint name="motor-e-glue" type="revolute">
       <parent link="base"/>
       <child link="motor-e"/>
       <origin xyz="0 -0.2 0" rpy="0 0 0" />
       <limit upper="0" lower="0" velocity="10" effort="1"/>
       <axis xyz="0 0 1" />  
  </joint>  
   <joint name="motor-w-glue" type="revolute">
       <parent link="base"/>
       <child link="motor-w"/>
       <origin xyz="0 0.2 0" rpy="0 0 0" />
       <limit upper="0" lower="0" velocity="10" effort="1"/>
       <axis xyz="0 0 1" />  
  </joint> 

</robot>
